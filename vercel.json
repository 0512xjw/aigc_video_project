{
  "version": 2,
  "build": {
    "env": {
      "NODE_VERSION": "18.19.0"
    }
  },
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "gateway/gateway.js",
      "use": "@vercel/node"
    },
    {
      "src": "admin/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/gateway/gateway.js"
    },
    {
      "src": "/backend-api/(.*)",
      "dest": "/backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/admin/index.html",
      "status": 200
    }
  ]
}